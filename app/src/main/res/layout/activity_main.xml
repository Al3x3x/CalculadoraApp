<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="80sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:background="@drawable/drawned_cornerbutton"
        android:visibility="visible"
        app:columnCount="4"
        app:rowCount="5">

        <!-- Fila 0 -->
        <Button
            android:id="@+id/siete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/ocho"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/nueve"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/division"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="3"
            app:layout_row="0" />

        <!-- Fila 1 -->
        <Button
            android:id="@+id/cuatro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/cinco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/seis"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/multiplicacion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="X"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="3"
            app:layout_row="1" />

        <!-- Fila 2 -->
        <Button
            android:id="@+id/uno"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/dos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/tres"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/suma"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="3"
            app:layout_row="2" />

        <!-- Fila 3 -->
        <Button
            android:id="@+id/punto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/cero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color1"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/igual"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="="
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/resta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="3"
            app:layout_row="3" />

        <!-- Fila 4: Nuevas operaciones -->
        <Button
            android:id="@+id/potencia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="^"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/raiz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="âˆš"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/modulo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="%"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color2"
            android:gravity="center"
            android:text="C"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_column="3"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
